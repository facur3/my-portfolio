---
import Header from '../components/Header.astro';
import '@fontsource-variable/onest'
---

<!doctype html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Facu Rossi - Portfolio</title>
</head>
<body class="bg-zinc-900 text-zinc-100 min-h-screen">
	<div class="absolute inset-0 -z-10 h-full w-full items-center px-5 py-24 [background:radial-gradient(125%_125%_at_50%_10%,#000_40%,#63e_100%)]"></div>
  <Header />
  
  <main class="max-w-4xl mx-auto px-4 py-20">
	<section class="space-y-6 mb-24">
		<div class="flex flex-row items-center gap-6 flex-wrap">
		  <h1 class="text-5xl md:text-6xl font-bold bg-gradient-to-r from-white to-zinc-400 bg-clip-text text-transparent">
			Hola, Soy Facu
		  </h1>
		  <div class="inline-flex items-center gap-3 px-4 py-2 rounded-full bg-white/5 backdrop-blur-lg border border-white/10">
			<span class="w-2 h-2 bg-green-400 rounded-full animate-pulse"></span>
			<span class="text-sm">Available for hire</span>
		  </div>
		</div>
	  
		<p class="text-xl md:text-2xl text-zinc-400 leading-relaxed max-w-2xl">
		  Estudiante de Lic. An√°lisis de Sistemas en la Universidad de Buenos Aires. 
		  <span class="text-white font-medium">Especializado en</span> 
		  <span class="inline-flex gap-3 ml-2">
			<span class="px-3 py-1 rounded-full bg-white/5 text-sm">AI Solutions</span>
			<span class="px-3 py-1 rounded-full bg-white/5 text-sm">Web Development</span>
		  </span>
		</p>
	  </section>
  </main>
</body>
</html>

<style>
	:root{
		color-scheme: light dark;
	}

	html{
		font-family: 'Onest Variable' system-ui, sans-serif;
	}

	body {
		background: #050505;
		display: flex;
		flex-direction: column;
		min-height: 100hv;
	}
</style>
