---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<Layout title="Blog | Facundo Rossi">
	<section class="w-full max-w-4xl mx-auto px-4 py-32">
        <div class="mb-16">
            <h1 class="text-4xl md:text-6xl font-heading font-bold text-zinc-900 dark:text-white mb-6">Blog</h1>
            <p class="text-xl text-zinc-600 dark:text-zinc-400">Reflexiones sobre ingeniería de software, arquitectura y tecnología.</p>
        </div>
        
		<div class="grid gap-8">
			{
				posts.map((post) => (
					<a href={`/blog/${post.slug}/`} class="group block p-8 rounded-3xl bg-zinc-50 dark:bg-zinc-900/50 border border-zinc-200 dark:border-white/5 hover:border-primary-500/50 hover:bg-white dark:hover:bg-zinc-900 transition-all duration-300">
                        <div class="flex flex-col md:flex-row md:items-center justify-between mb-4">
						    <h2 class="text-2xl font-bold text-zinc-900 dark:text-white group-hover:text-primary-500 transition-colors">{post.data.title}</h2>
                            <p class="text-sm text-zinc-500 font-mono mt-2 md:mt-0">
                                {post.data.pubDate.toLocaleDateString('es-AR', {
                                    year: 'numeric',
                                    month: 'short',
                                    day: 'numeric',
                                })}
                            </p>
                        </div>
                        <p class="text-zinc-600 dark:text-zinc-400 leading-relaxed mb-4">{post.data.description}</p>
                        <div class="flex gap-2">
                             {post.data.tags && post.data.tags.map(tag => (
                                 <span class="text-xs font-medium px-2 py-1 rounded bg-zinc-200 dark:bg-zinc-800 text-zinc-700 dark:text-zinc-300">{tag}</span>
                             ))}
                        </div>
					</a>
				))
			}
		</div>
	</section>
</Layout>
