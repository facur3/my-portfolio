---
import Hero from "../components/Hero.astro";
import Experience from "../components/Experience.astro";
import Projects from "../components/Projects.astro";
import Skills from "../components/Skills.astro";
import Layout from "../layouts/Layout.astro";
import About from "../components/AboutMe.astro";
import ContactForm from "../components/ContactForm.astro";
import Testimonials from "../components/Testimonials.astro";
---

<Layout title="Facundo Rossi | System Analyst">
  <!-- Hero Section -->
  <section id="top" class="w-full min-h-screen snap-start snap-always shrink-0">
    <Hero />
  </section>

  <!-- Skills Section -->
  <section
    id="skills"
    class="w-full snap-start snap-always shrink-0 flex flex-col justify-center py-10"
  >
    <div class="mb-12 text-center">
      <h2
        class="text-2xl md:text-5xl font-bold text-zinc-900 dark:text-white mb-6"
      >
        Technical Arsenal
      </h2>
      <p class="text-zinc-600 dark:text-zinc-400 text-lg max-w-2xl mx-auto">
        Mastery of modern tools to build robust and scalable solutions.
      </p>
    </div>
    <Skills />
  </section>

  <!-- Experience Section -->
  <section
    id="experience"
    class="w-full snap-start snap-always shrink-0 flex flex-col justify-center py-10"
  >
    <div class="mb-12 text-center">
      <h2
        class="text-3xl md:text-5xl font-bold text-zinc-900 dark:text-white mb-6"
      >
        Professional Experience
      </h2>
      <p class="text-zinc-600 dark:text-zinc-400 text-lg max-w-2xl mx-auto">
        Proven track record in agile environments and high-impact projects.
      </p>
    </div>
    <Experience />
  </section>

  <!-- Projects Section -->
  <section
    id="projects"
    class="w-full snap-start snap-always shrink-0 flex flex-col justify-center py-10"
  >
    <div class="mb-12 text-center">
      <h2
        class="text-3xl md:text-5xl font-bold text-zinc-900 dark:text-white mb-6"
      >
        Featured Projects
      </h2>
      <p class="text-zinc-600 dark:text-zinc-400 text-lg max-w-2xl mx-auto">
        A selection of technical solutions solving real-world problems.
      </p>
    </div>
    <Projects />
  </section>

  <Testimonials />
  <!-- About Me Section -->
  <section
    id="about-me"
    class="w-full snap-start snap-always shrink-0 flex flex-col items-center justify-center py-10"
  >
    <div class="mb-12 text-center">
      <h2
        class="text-3xl md:text-5xl font-bold text-zinc-900 dark:text-white mb-6"
      >
        About Me
      </h2>
      <p class="text-zinc-600 dark:text-zinc-400 text-lg max-w-2xl mx-auto">
        A glimpse into my journey and professional focus.
      </p>
    </div>
    <div class="w-full">
      <About />
    </div>
  </section>

  <!-- Contact Section-->
  <section
    id="contact"
    class="h-screen w-full snap-start snap-always shrink-0 flex items-center justify-center"
  >
    <div
      class="w-full max-w-lg mx-auto bg-white/80 dark:bg-zinc-900/50 backdrop-blur-md p-8 md:p-12 rounded-3xl border border-zinc-200 dark:border-zinc-800 shadow-2xl"
    >
      <div class="text-center mb-10">
        <h2 class="text-4xl font-bold text-zinc-900 dark:text-white mb-4">
          Contact Me
        </h2>
        <p class="text-zinc-600 dark:text-zinc-400">
          Have a project in mind? Let's talk.
        </p>
      </div>
      <ContactForm action="https://formspree.io/f/mqaeldol" />
    </div>
  </section>
</Layout>
