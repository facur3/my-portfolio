---
// src/components/Projects.astro

const projects = [
  {
    title: "Personal Portfolio",
    description: "Modern responsive portfolio showcasing development projects and skills",
    github: "https://github.com/facur3/Portafolio",
    demo: "https://facur3.github.io/Portafolio/",
    tags: ["HTML", "CSS", "JavaScript", "Responsiveness"]
  },
  {
    title: "Fifteen Puzzle Game",
    description: "Interactive web implementation of classic sliding puzzle game",
    github: "https://github.com/facur3/Fifteen",
    demo: "https://facur3.github.io/Fifteen/",
    tags: ["JavaScript", "HTML", "CSS", "Game Development", "Python"]
  },
  {
    title: "Plagiarism Detector",
    description: "Text analysis system for detecting content similarity",
    github: "https://github.com/facur3/plagios",
    tags: ["Python", "NLP"]
  },
  {
    title: "First Webpage",
    description: "Initial professional platform implementation",
    github: "https://github.com/facur3/PFRossi",
    demo: "https://facur3.github.io/PFRossi/",
    tags: ["HTML", "Sass", "Responsiveness"]
  }
];

type TagColorMap = {
  [key: string]: string;
  HTML: string;
  CSS: string;
  JavaScript: string;
  Python: string;
  Sass: string;
  NLP: string;
  Responsiveness: string;
  'Game Development': string;
};

const tagColors: TagColorMap = {
  'HTML': 'bg-orange-400/10 text-orange-400',
  'CSS': 'bg-blue-400/10 text-blue-400',
  'JavaScript': 'bg-yellow-400/10 text-yellow-400',
  'Python': 'bg-emerald-400/10 text-emerald-400',
  'Sass': 'bg-pink-400/10 text-pink-400',
  'NLP': 'bg-green-400/10 text-green-400',
  'Responsiveness': 'bg-purple-400/10 text-purple-400',
  'Game Development': 'bg-red-400/10 text-red-400'
};
---

<div class="grid grid-cols-1 md:grid-cols-2 gap-6 w-full">
  {projects.map(project => (
    <article class="group relative overflow-hidden rounded-2xl p-6 border border-zinc-800 hover:border-zinc-700 bg-zinc-900/50 hover:bg-zinc-900 transition-all duration-300">
      <div class="absolute inset-0 bg-gradient-to-br from-blue-500/10 to-purple-500/10 opacity-0 group-hover:opacity-100 transition-opacity"></div>
      
      <div class="relative z-10">
        <div class="flex justify-between items-start mb-4">
          <h3 class="text-xl font-semibold text-zinc-100">{project.title}</h3>
          <div class="flex gap-2">
            <a 
              href={project.github} 
              target="_blank"
              class="p-1.5 hover:bg-white/5 rounded-full transition-colors"
              aria-label="GitHub Repository"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"/>
              </svg>
            </a>
            {project.demo && (
              <a 
                href={project.demo} 
                target="_blank"
                class="p-1.5 hover:bg-white/5 rounded-full transition-colors"
                aria-label="Live Demo"
              >
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
                </svg>
              </a>
            )}
          </div>
        </div>

        <p class="text-zinc-400 mb-4 leading-relaxed">{project.description}</p>
        
        <div class="flex flex-wrap gap-2">
          {project.tags.map(tag => {
            const colorClass = tag in tagColors 
              ? tagColors[tag as keyof typeof tagColors]
              : 'bg-zinc-800 text-zinc-300';
            
            return (
            <span class={`px-2.5 py-1 rounded-full text-sm ${colorClass}
            transition-transform duration-300 hover:scale-105 hover:shadow-[0_0_8px_-2px_rgba(255,255,255,0.1)]`}>
                {tag}
            </span>
            )
          })}
        </div>
      </div>
    </article>
  ))}
</div>