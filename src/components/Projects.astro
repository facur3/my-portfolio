---
import GitHub from "./icons/GitHub.astro";
import Link from "./icons/Link.astro";
import JavaScript from "./icons/JavaScript.astro";
import Python from "./icons/Python.astro";
import Java from "./icons/Java.astro";
import Terminal from "./icons/Terminal.astro";

const PROJECTS = [
    {
        title: "Angel's Kitchen - POS & KDS System",
        subtitle: "Full-Stack Web App",
        description:
            "Modern restaurant management system with real-time WebSocket order sync. Features station-based Kitchen Display System (KDS), ingredient modifiers, and integration with DoorDash and Uber Eats APIs.",
        icon: JavaScript,
        color: "text-green-500",
        bgGradient: "from-green-500/20 to-green-600/5",
        demo: "https://angels-kitchen-frontend.onrender.com/",
        github: "https://github.com/facur3/angels-kitchen-system",
        tags: ["React", "Node.js", "WebSockets", "REST API"],
        featured: true,
    },
    {
        title: "GTA VI Traffic Simulator",
        subtitle: "Algorithms & Data Structures",
        description:
            "Mission-based driving game implementing A*, Dijkstra and Floyd-Warshall for GPS pathfinding. Features dynamic traffic congestion, vehicle management system with inheritance, and real-time route optimization on grid-based maps.",
        icon: Java,
        color: "text-orange-500",
        bgGradient: "from-orange-500/20 to-orange-600/5",
        tags: ["Java", "A* Algorithm", "Graphs", "OOP"],
        featured: false,
    },
    {
        title: "Roblox Prospecting Calculator",
        subtitle: "Web Tools & Data Viz",
        description:
            "Interactive probability calculator for Roblox game mechanics. Features real-time luck calculations, museum planner with stat optimization, equipment manager with ring slots, and batch efficiency estimator.",
        icon: JavaScript,
        color: "text-purple-500",
        bgGradient: "from-purple-500/20 to-purple-600/5",
        demo: "https://prospecting-calculator.vercel.app/",
        github: "https://github.com/facur3/prospecting-calculator",
        tags: ["JavaScript", "HTML", "CSS", "Data Visualization"],
        featured: false,
    },
    {
        title: "Fifteen Puzzle Game",
        subtitle: "Interactive Web Game",
        description:
            "Classic sliding puzzle with modern UI. Optimized game engine with state management, responsive design for mobile and desktop, and smooth 60fps animations in Vanilla JavaScript.",
        icon: JavaScript,
        color: "text-yellow-500",
        bgGradient: "from-yellow-500/20 to-yellow-600/5",
        github: "https://github.com/facur3/Fifteen",
        demo: "https://facur3.github.io/Fifteen/",
        tags: ["JavaScript", "CSS", "DOM Manipulation"],
        featured: false,
    },
    {
        title: "Plagiarism Detection System",
        subtitle: "NLP & Machine Learning",
        description:
            "Text analysis tool using TF-IDF vectorization and cosine similarity to detect plagiarism. Implements advanced NLP techniques for semantic comparison and structural pattern recognition in documents.",
        icon: Python,
        color: "text-blue-500",
        bgGradient: "from-blue-500/20 to-blue-600/5",
        github: "https://github.com/facur3/plagios",
        tags: ["Python", "NLP", "TF-IDF", "Machine Learning"],
        featured: false,
    },
];
---

<!-- Bento Grid -->
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 auto-rows-[minmax(300px,auto)]">
    {
        PROJECTS.map((project, index) => (
            <article
                class={`group relative flex flex-col justify-between overflow-hidden rounded-3xl border border-zinc-200 dark:border-zinc-800 bg-white dark:bg-[#121214] p-6 md:p-8 transition-all duration-500 hover:border-zinc-300 dark:hover:border-zinc-700 hover:shadow-2xl dark:hover:shadow-glow-sm ${
                    project.featured ? "md:col-span-2 lg:col-span-2" : "md:col-span-1"
                }`}
            >
                <!-- Spotlight Background Effect -->
                <div 
                    class="absolute inset-0 opacity-0 group-hover:opacity-100 transition-opacity duration-500 pointer-events-none"
                    style="background: radial-gradient(600px circle at var(--mouse-x, 50%) var(--mouse-y, 50%), rgba(139, 92, 246, 0.1), transparent 40%);"
                ></div>
                
                <!-- Content -->
                <div class="relative z-10 space-y-6">
                    <!-- Header: Icon & Subtitle -->
                    <div class="flex items-center gap-4">
                        <div class={`p-3 rounded-2xl bg-zinc-100 dark:bg-zinc-800/50 border border-zinc-200 dark:border-white/5 ${project.color}`}>
                            <project.icon class="size-8" />
                        </div>
                        <span class="text-xs font-mono font-medium tracking-wide uppercase text-zinc-500 dark:text-zinc-500 border border-zinc-200 dark:border-zinc-800 px-4 py-1.5 rounded-full">
                            {project.subtitle}
                        </span>
                    </div>

                    <!-- Title & Desc -->
                    <div class="space-y-2">
                        <h3 class="text-2xl md:text-3xl font-heading font-bold text-zinc-900 dark:text-white group-hover:text-primary-500 dark:group-hover:text-primary-400 transition-colors">
                            {project.title}
                        </h3>
                        <p class="text-zinc-600 dark:text-zinc-400 leading-relaxed">
                            {project.description}
                        </p>
                    </div>

                    <!-- Tags -->
                    <div class="flex flex-wrap gap-2">
                        {project.tags.map(tag => (
                            <span class="text-xs font-medium px-2.5 py-1 rounded-md bg-zinc-100 dark:bg-zinc-800 text-zinc-700 dark:text-zinc-300 border border-zinc-200 dark:border-zinc-700/50">
                                {tag}
                            </span>
                        ))}
                    </div>
                </div>

                <!-- Actions -->
                <div class="relative z-10 pt-8 flex items-center gap-4 mt-auto">
                    {project.github && (
                        <a 
                            href={project.github} 
                            target="_blank" 
                            rel="noopener noreferrer"
                            class="inline-flex items-center gap-2 text-sm font-medium text-zinc-900 dark:text-white hover:text-primary-600 dark:hover:text-primary-400 transition-colors"
                        >
                            <GitHub class="size-4" />
                            <span>Code</span>
                        </a>
                    )}
                    {project.demo && (
                        <a 
                            href={project.demo} 
                            target="_blank" 
                            rel="noopener noreferrer"
                            class="inline-flex items-center gap-2 text-sm font-medium text-zinc-900 dark:text-white hover:text-primary-600 dark:hover:text-primary-400 transition-colors"
                        >
                            <Link class="size-4" />
                            <span>Live Demo</span>
                        </a>
                    )}
                </div>
            </article>
        ))
    }
</div>

<script>
    // Spotlight Effect Script
    document.addEventListener('astro:page-load', () => {
        const cards = document.querySelectorAll('article');
        
        cards.forEach(card => {
            card.addEventListener('mousemove', (e) => {
                const rect = (card as HTMLElement).getBoundingClientRect();
                const x = e.clientX - rect.left;
                const y = e.clientY - rect.top;
                
                (card as HTMLElement).style.setProperty('--mouse-x', `${x}px`);
                (card as HTMLElement).style.setProperty('--mouse-y', `${y}px`);
            });
        });
    });
</script>
