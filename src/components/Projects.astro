---
import GitHub from "./icons/GitHub.astro";
import Link from "./icons/Link.astro";
import JavaScript from "./icons/JavaScript.astro";
import Python from "./icons/Python.astro";
import Java from "./icons/Java.astro";
import Terminal from "./icons/Terminal.astro";

const PROJECTS = [
    {
        title: "Autonomous Navigation System",
        subtitle: "Algorithms & Graphs",
        description:
            "High-precision urban traffic simulator implementing A* with Manhattan heuristic. Optimized for real-time route calculation on dynamic graphs.",
        icon: Java,
        color: "text-orange-500",
        bgGradient: "from-orange-500/20 to-orange-600/5",
        github: "https://github.com/facur3/tpg-2c2025-recursivos",
        tags: ["Java", "Algorithms", "Graphs"],
        featured: true, // Takes more space
    },
    {
        title: "Data Scraper Pipeline",
        subtitle: "Data Engineering",
        description:
            "Python ETL pipeline for extraction and normalization of thousands of records. Uses BeautifulSoup and Pandas for statistical processing.",
        icon: Python,
        color: "text-blue-500",
        bgGradient: "from-blue-500/20 to-blue-600/5",
        demo: "https://prospecting-calculator.vercel.app/",
        github: "https://github.com/facur3/prospecting-calculator",
        tags: ["Python", "ETL", "Pandas"],
        featured: false,
    },
    {
        title: "Fifteen Puzzle Engine",
        subtitle: "Game Dev",
        description:
            "Optimized game engine with complex state management and 60fps animations in Vanilla JS.",
        icon: JavaScript,
        color: "text-yellow-500",
        bgGradient: "from-yellow-500/20 to-yellow-600/5",
        github: "https://github.com/facur3/Fifteen",
        demo: "https://facur3.github.io/Fifteen/",
        tags: ["JavaScript", "DOM", "Game Loop"],
        featured: false,
    },
    {
        title: "NLP Plagiarism Detector",
        subtitle: "AI / NLP",
        description:
            "Semantic analysis system using TF-IDF and cosine similarity to detect structural coincidences in documents.",
        icon: Python,
        color: "text-emerald-500",
        bgGradient: "from-emerald-500/20 to-emerald-600/5",
        github: "https://github.com/facur3/plagios",
        tags: ["Python", "NLP", "Machine Learning"],
        featured: true,
    },
];
---

<!-- Bento Grid -->
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 auto-rows-[minmax(300px,auto)]">
    {
        PROJECTS.map((project, index) => (
            <article
                class={`group relative flex flex-col justify-between overflow-hidden rounded-3xl border border-zinc-200 dark:border-zinc-800 bg-white dark:bg-[#121214] p-6 md:p-8 transition-all duration-500 hover:border-zinc-300 dark:hover:border-zinc-700 hover:shadow-2xl dark:hover:shadow-glow-sm ${
                    project.featured ? "md:col-span-2 lg:col-span-2" : "md:col-span-1"
                }`}
            >
                <!-- Spotlight Background Effect -->
                <div 
                    class="absolute inset-0 opacity-0 group-hover:opacity-100 transition-opacity duration-500 pointer-events-none"
                    style="background: radial-gradient(600px circle at var(--mouse-x, 50%) var(--mouse-y, 50%), rgba(139, 92, 246, 0.1), transparent 40%);"
                ></div>
                
                <!-- Content -->
                <div class="relative z-10 space-y-6">
                    <!-- Header: Icon & Subtitle -->
                    <div class="flex items-start justify-between">
                        <div class={`p-3 rounded-2xl bg-zinc-100 dark:bg-zinc-800/50 border border-zinc-200 dark:border-white/5 ${project.color}`}>
                            <project.icon class="size-8" />
                        </div>
                        <span class="text-xs font-mono font-medium tracking-wider uppercase text-zinc-500 dark:text-zinc-500 border border-zinc-200 dark:border-zinc-800 px-3 py-1 rounded-full">
                            {project.subtitle}
                        </span>
                    </div>

                    <!-- Title & Desc -->
                    <div class="space-y-2">
                        <h3 class="text-2xl md:text-3xl font-heading font-bold text-zinc-900 dark:text-white group-hover:text-primary-500 dark:group-hover:text-primary-400 transition-colors">
                            {project.title}
                        </h3>
                        <p class="text-zinc-600 dark:text-zinc-400 leading-relaxed">
                            {project.description}
                        </p>
                    </div>

                    <!-- Tags -->
                    <div class="flex flex-wrap gap-2">
                        {project.tags.map(tag => (
                            <span class="text-xs font-medium px-2.5 py-1 rounded-md bg-zinc-100 dark:bg-zinc-800 text-zinc-700 dark:text-zinc-300 border border-zinc-200 dark:border-zinc-700/50">
                                {tag}
                            </span>
                        ))}
                    </div>
                </div>

                <!-- Actions -->
                <div class="relative z-10 pt-8 flex items-center gap-4 mt-auto">
                    {project.github && (
                        <a 
                            href={project.github} 
                            target="_blank" 
                            rel="noopener noreferrer"
                            class="inline-flex items-center gap-2 text-sm font-medium text-zinc-900 dark:text-white hover:text-primary-600 dark:hover:text-primary-400 transition-colors"
                        >
                            <GitHub class="size-4" />
                            <span>Code</span>
                        </a>
                    )}
                    {project.demo && (
                        <a 
                            href={project.demo} 
                            target="_blank" 
                            rel="noopener noreferrer"
                            class="inline-flex items-center gap-2 text-sm font-medium text-zinc-900 dark:text-white hover:text-primary-600 dark:hover:text-primary-400 transition-colors"
                        >
                            <Link class="size-4" />
                            <span>Live Demo</span>
                        </a>
                    )}
                </div>
            </article>
        ))
    }
</div>

<script>
    // Spotlight Effect Script
    document.addEventListener('astro:page-load', () => {
        const cards = document.querySelectorAll('article');
        
        cards.forEach(card => {
            card.addEventListener('mousemove', (e) => {
                const rect = (card as HTMLElement).getBoundingClientRect();
                const x = e.clientX - rect.left;
                const y = e.clientY - rect.top;
                
                (card as HTMLElement).style.setProperty('--mouse-x', `${x}px`);
                (card as HTMLElement).style.setProperty('--mouse-y', `${y}px`);
            });
        });
    });
</script>
