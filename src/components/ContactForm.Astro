---
const { action } = Astro.props;
---

<form 
  class="space-y-6" 
  action={action}
  method="POST"
  id="contact-form"
>
  <div class="space-y-4">
    <div>
      <label class="block text-sm font-medium text-zinc-700 dark:text-zinc-300 mb-2">Name</label>
      <input
        type="text"
        name="name"
        required
        class="w-full px-4 py-3 rounded-lg border border-zinc-300 dark:border-zinc-700 bg-white/50 dark:bg-zinc-900/50 backdrop-blur-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
      />
    </div>