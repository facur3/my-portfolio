---
const { action } = Astro.props;
---

<form 
  class="space-y-6" 
  action={action}
  method="POST"
  id="contact-form"
>
  <div class="space-y-4">
    <div>
      <label for="name" class="block text-sm font-medium ...">Nombre</label>
      <input
        type="text"
        id="name"
        name="name"
        required
        class="w-full px-4 py-3 ..."
        aria-required="true"
      />
    </div>
    
    <div>
      <label for="email" class="block text-sm font-medium ...">Email</label>
      <input
        type="email"
        id="email"
        name="email"
        required
        class="w-full px-4 py-3 ..."
        aria-required="true"
      />
    </div>
    
    <div>
      <label for="message" class="block text-sm font-medium ...">Mensaje</label>
      <textarea
        id="message"
        name="message"
        rows="4"
        required
        class="w-full px-4 py-3 ..."
        aria-required="true"
      ></textarea>
    </div>
  </div>

  <button
    type="submit"
    class="w-full px-6 py-3 text-lg font-medium text-white bg-blue-500 rounded-lg hover:bg-blue-600 transition-colors duration-300"
    aria-label="Enviar mensaje"
  >
    Enviar Mensaje
  </button>
</form>