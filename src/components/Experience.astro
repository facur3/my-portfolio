---
const experiences = [
  {
    title: "Desarrollador Web",
    company: "Freelancer",
    period: "2023-Actualidad",
    description: "Desarrollo de aplicaciones web responsivas usando frameworks modernos...",
    tags: ["React", "TypeScript", "Node.js"]
  },
  {
    title: "Asistente de Ventas y Gestor de Inventario",
    company: "Ferretería 'Los Hermanos'",
    period: "2014-2021",
    description: "Gestión de operaciones diarias incluyendo atención al cliente, control de inventario y reportes de ventas. Implementé un sistema de seguimiento de stock que redujo pérdidas en un 25%.",
    tags: ["Atención al Cliente", "Gestión de Inventario", "Ventas", "Administración"]
  },
  {
    title: "Asistente Técnico",
    company: "Mundo Comercial Electromecánica",
    period: "2021-2023",
    description: "Soporte técnico en mantenimiento de equipos industriales, asistencia en instalaciones eléctricas y coordinación con proveedores para adquisición de repuestos.",
    tags: ["Soporte Técnico", "Mantenimiento de Equipos", "Compras", "Trabajo en Equipo"]
  }
];
---

<div class="relative">
  <div class="absolute left-0 top-0 w-0.5 h-full bg-zinc-300/50 dark:bg-zinc-600 z-0"></div>

  <div class="space-y-12 pl-4 sm:pl-8 md:pl-12 mt-8">
    {experiences.map((exp) => (
      <div class="relative">
        <div class="absolute left-[-5px] sm:left-[-3px] md:left-[-2px] top-2 w-3 h-3 bg-blue-500 rounded-full ring-4 ring-blue-500/20 z-10"></div>
        
        <div class="ml-6 sm:ml-8 md:ml-10">
          <h3 class="text-xl font-semibold text-zinc-800 dark:text-zinc-100">{exp.title}</h3>
          <p class="text-zinc-600 dark:text-zinc-400 mt-1">{exp.company} · {exp.period}</p>
          <p class="text-zinc-600 dark:text-zinc-400 mt-4 leading-relaxed">{exp.description}</p>
          
          <div class="flex flex-wrap gap-2 mt-4">
            {exp.tags.map(tag => (
              <span class="px-2.5 py-1 text-sm rounded-full bg-zinc-800/5 dark:bg-white/5 text-zinc-700 dark:text-zinc-300 border border-zinc-300/50 dark:border-zinc-700 transition-colors duration-300 hover:bg-zinc-800/10 dark:hover:bg-white/10">
                {tag}
              </span>
            ))}
          </div>
        </div>
      </div>
    ))}
  </div>
</div>