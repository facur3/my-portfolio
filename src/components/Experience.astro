---
const experiences = [
  {
    title: "Web Developer",
    company: "Tech Corp",
    period: "2022-Present",
    description: "Developed responsive web applications using modern frameworks...",
    tags: ["React", "TypeScript", "Node.js"]
  },
  // Add more experiences...
];
---

<section id="experiencia" class="py-24 w-full">
  <div class="mb-12">
    <h2 class="text-3xl font-bold bg-gradient-to-r from-blue-400 to-purple-400 bg-clip-text text-transparent">
      Professional Experience
    </h2>
    <div class="h-px w-32 bg-gradient-to-r from-zinc-700 to-transparent mt-4"></div>
  </div>

  <div class="space-y-12">
    {experiences.map(exp => (
      <div class="relative pl-8 border-l-2 border-zinc-300/50 dark:border-zinc-700 group">
        <div class="absolute w-3 h-3 bg-blue-500 rounded-full -left-[7px] top-2 ring-4 ring-blue-500/20 animate-pulse-slow"></div>
        <h3 class="text-xl font-semibold text-zinc-800 dark:text-zinc-100">{exp.title}</h3>
        <p class="text-zinc-600 dark:text-zinc-400 mt-1">{exp.company} Â· {exp.period}</p>
        <p class="text-zinc-600 dark:text-zinc-400 mt-4 leading-relaxed">{exp.description}</p>
        <div class="flex flex-wrap gap-2 mt-4">
          {exp.tags.map(tag => (
            <span class="px-2.5 py-1 text-sm rounded-full bg-zinc-800/5 dark:bg-white/5 text-zinc-700 dark:text-zinc-300 border border-zinc-300/50 dark:border-zinc-700 transition-all duration-300 hover:scale-105 hover:shadow-[0_4px_12px_-2px_rgba(99,102,241,0.1)] hover:-translate-y-0.5 group relative overflow-hidden experience-tag">
  <div class="absolute inset-0 bg-[linear-gradient(110deg,transparent_25%,rgba(99,102,241,0.05)_45%,transparent_70%)] opacity-0 group-hover:opacity-100 transition-opacity duration-300 animate-shine"></div>
  {tag}
</span>
          ))}
        </div>
      </div>
    ))}
  </div>
</section>
