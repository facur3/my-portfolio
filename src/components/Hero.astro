          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  @keyframes blink {
    0%,
    50% {
      opacity: 1;
    }
    51%,
    100% {
      opacity: 0;
    }
  }
  #cursor {
    animation: blink 1s step-end infinite;
  }
  #cursor.fade-out {
    animation: none;
    opacity: 0;
    transition: opacity 0.5s ease-out;
  }
</style>

<script>
  const text = "System Analyst";
  let charIndex = 0;
  let blinkCount = 0;

  const typewriterEl = document.getElementById("typewriter");
  const cursorEl = document.getElementById("cursor");

  function type() {
    if (!typewriterEl) return;

    if (charIndex < text.length) {
      typewriterEl.textContent = text.substring(0, charIndex + 1);
      charIndex++;
      setTimeout(type, 100);
    } else {
      // Typing complete - blink 3 times then fade
      setTimeout(fadeOutCursor, 1500);
    }
  }

  function fadeOutCursor() {
    if (cursorEl) {
      cursorEl.classList.add("fade-out");
    }
  }

  document.addEventListener("DOMContentLoaded", type);
  document.addEventListener("astro:page-load", () => {
    charIndex = 0;
    if (typewriterEl) typewriterEl.textContent = "";
    if (cursorEl) cursorEl.classList.remove("fade-out");
    type();
  });
</script>
