---
import { Image } from "astro:assets";
import profileImg from "../assets/images/yo.jpeg";
import LinkedInIcon from "./icons/LinkedIn.astro";
import MailIcon from "./icons/Mail.astro";
import GitHub from "./icons/GitHub.astro";
---

<section
  class="w-full min-h-[100dvh] flex flex-col md:flex-row items-center justify-start md:justify-center pt-36 pb-12 md:py-0 animate-fade-in-up"
  data-aos="fade-up"
>
  <div
    class="flex flex-col md:flex-row items-center justify-center gap-8 md:gap-12 w-full"
  >
    <!-- Left Column: Content -->
    <div
      class="flex flex-col space-y-8 order-2 md:order-1 flex-1 text-center md:text-left items-center md:items-start"
    >
      <div class="space-y-6">
        <h1
          class="text-4xl md:text-6xl lg:text-7xl font-bold tracking-tight text-white leading-[1.1]"
        >
          Hello, I'm <br />
          <span class="text-zinc-400">Facundo Rossi</span>
        </h1>

        <p
          class="text-zinc-400 leading-relaxed text-lg max-w-lg mx-auto md:mx-0"
        >
          Advanced Systems Analysis student at <span
            class="text-white font-medium">UBA (FIUBA)</span
          >. Passionate about building <span class="text-white font-medium"
            >efficient, scalable software</span
          > and solving complex problems through <span
            class="text-white font-medium">Backend</span
          > and <span class="text-white font-medium">Infrastructure</span> solutions.
        </p>

        <div class="flex flex-wrap gap-4 pt-4 justify-center md:justify-start">
          <a
            href="/resume.pdf"
            download
            class="inline-flex items-center justify-center px-8 py-4 text-sm font-semibold text-zinc-900 bg-white rounded-lg hover:bg-zinc-200 hover:-translate-y-0.5 hover:shadow-lg active:scale-95 transition-all duration-300 focus:ring-2 focus:ring-offset-2 focus:ring-zinc-500 focus:outline-none"
          >
            Descargar CV / Resum√©
          </a>
        </div>

        <div class="flex gap-4 pt-4 justify-center md:justify-start">
          <a
            href="https://github.com/facur3"
            target="_blank"
            class="p-3 rounded-full bg-zinc-900 border border-zinc-800 text-zinc-400 hover:text-white hover:border-zinc-700 hover:-translate-y-0.5 hover:shadow-lg active:scale-95 transition-all duration-300 focus:ring-2 focus:ring-offset-2 focus:ring-zinc-500 focus:outline-none"
          >
            <GitHub class="size-5" />
          </a>
          <a
            href="https://www.linkedin.com/in/facundo-rossi-a5839a278/"
            target="_blank"
            class="p-3 rounded-full bg-zinc-900 border border-zinc-800 text-zinc-400 hover:text-white hover:border-zinc-700 hover:-translate-y-0.5 hover:shadow-lg active:scale-95 transition-all duration-300 focus:ring-2 focus:ring-offset-2 focus:ring-zinc-500 focus:outline-none"
          >
            <LinkedInIcon class="size-5" />
          </a>
          <a
            href="mailto:facundocrossi@gmail.com"
            class="p-3 rounded-full bg-zinc-900 border border-zinc-800 text-zinc-400 hover:text-white hover:border-zinc-700 hover:-translate-y-0.5 hover:shadow-lg active:scale-95 transition-all duration-300 focus:ring-2 focus:ring-offset-2 focus:ring-zinc-500 focus:outline-none"
          >
            <MailIcon class="size-5" />
          </a>
        </div>
      </div>

      <!-- Student Stats -->
      <div
        class="flex items-center gap-8 md:gap-12 pt-4 justify-center md:justify-start"
      >
        <div>
          <span class="block text-2xl md:text-3xl font-bold text-white"
            >10+</span
          >
          <span class="text-xs text-zinc-500 uppercase tracking-wider"
            >Projects</span
          >
        </div>
        <div>
          <span class="block text-2xl md:text-3xl font-bold text-white">3+</span
          >
          <span class="text-xs text-zinc-500 uppercase tracking-wider"
            >Years Coding</span
          >
        </div>
        <div>
          <span class="block text-2xl md:text-3xl font-bold text-white"
            >100%</span
          >
          <span class="text-xs text-zinc-500 uppercase tracking-wider"
            >Commitment</span
          >
        </div>
      </div>
    </div>

    <!-- Right Column: Image with Circle Mask -->
    <div
      class="relative flex flex-col justify-center items-center order-1 md:order-2 flex-1"
    >
      <!-- Circle Backdrop -->
      <div
        class="absolute w-[300px] h-[300px] md:w-[500px] md:h-[500px] bg-zinc-800/20 rounded-full blur-3xl -z-10"
      >
      </div>

      <div class="relative flex flex-col items-center gap-6">
        <div
          class="relative flex-shrink-0 w-40 h-40 sm:w-56 sm:h-56 md:w-80 md:h-80 rounded-full overflow-hidden border border-zinc-800 bg-zinc-900 shadow-2xl"
        >
          <Image
            src={profileImg}
            alt="Facu Rossi"
            class="w-full h-full object-cover transition-transform duration-500 hover:scale-105"
            loading="eager"
          />
        </div>

        <!-- Available for Hire Badge - Flex Item Below Image -->
        <div class="z-20 w-max">
          <div
            class="flex items-center gap-3 px-5 py-2 bg-zinc-900/90 backdrop-blur-md border border-zinc-800 rounded-full shadow-2xl"
          >
            <span class="relative flex h-3 w-3">
              <span
                class="animate-ping absolute inline-flex h-full w-full rounded-full bg-green-500 opacity-75"
              ></span>
              <span
                class="relative inline-flex rounded-full h-3 w-3 bg-green-500"
              ></span>
            </span>
            <span class="text-sm font-semibold text-white tracking-wide"
              >Disponible para trabajar</span
            >
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
