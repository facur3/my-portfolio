---
import { Image } from "astro:assets";
import profileImg from "../assets/images/yo.jpeg";
import LinkedInIcon from "./icons/LinkedIn.astro";
import MailIcon from "./icons/Mail.astro";
import GitHub from "./icons/GitHub.astro";
---

<section
  id="home"
  class="w-full min-h-[100dvh] flex flex-col md:flex-row items-center justify-start md:justify-center pt-32 pb-12 md:py-0 relative overflow-visible"
>
  <div
    class="flex flex-col md:flex-row items-center justify-between gap-12 md:gap-16 w-full"
  >
    <!-- Content Column -->
    <div
      class="flex flex-col space-y-6 order-2 md:order-1 flex-1 text-center md:text-left items-center md:items-start"
    >
      <!-- Greeting -->
      <div
        class="opacity-0 translate-y-4 animate-in"
        style="animation-delay: 100ms;"
      >
        <span
          class="px-4 py-1.5 rounded-full border border-primary-500/30 bg-primary-500/10 text-primary-600 dark:text-primary-400 text-sm font-medium tracking-wide"
        >
          ðŸ‘‹ Hello, I'm Facundo Rossi
        </span>
      </div>

      <!-- Headline -->
      <h1
        class="text-4xl md:text-6xl lg:text-7xl font-heading font-bold tracking-tight text-zinc-900 dark:text-white leading-[1.05] opacity-0 translate-y-4 animate-in"
        style="animation-delay: 200ms;"
      >
        Bilingual Operations <br />
        <span
          class="text-transparent bg-clip-text bg-gradient-to-r from-primary-600 to-indigo-600 dark:from-primary-400 dark:to-indigo-400"
        >
          & Data Analyst
        </span>
      </h1>

      <!-- Subheadline -->
      <p
        class="text-zinc-600 dark:text-zinc-400 leading-relaxed text-lg max-w-xl opacity-0 translate-y-4 animate-in"
        style="animation-delay: 300ms;"
      >
        Systems Analysis student (FIUBA) specialized in process optimization,
        data-driven decision making, and scalable software solutions.
      </p>

      <!-- CTA Buttons -->
      <div
        class="flex flex-wrap gap-4 pt-4 justify-center md:justify-start opacity-0 translate-y-4 animate-in"
        style="animation-delay: 400ms;"
      >
        <a href="/resume.pdf" download class="btn-primary"> Download CV </a>

        <a href="#contact" class="btn-secondary"> Contact Me </a>
      </div>

      <!-- Social Links -->
      <div
        class="flex gap-4 pt-6 justify-center md:justify-start opacity-0 translate-y-4 animate-in"
        style="animation-delay: 500ms;"
      >
        <a
          href="https://github.com/facur3"
          target="_blank"
          rel="noopener noreferrer"
          class="text-zinc-500 hover:text-zinc-900 dark:hover:text-white transition-colors"
          aria-label="GitHub"
        >
          <GitHub class="size-6" />
        </a>
        <a
          href="https://www.linkedin.com/in/facundo-rossi-a5839a278/"
          target="_blank"
          rel="noopener noreferrer"
          class="text-zinc-500 hover:text-linkedin transition-colors hover:text-blue-500"
          aria-label="LinkedIn"
        >
          <LinkedInIcon class="size-6" />
        </a>
        <a
          href="mailto:facurossi33@gmail.com"
          class="text-zinc-500 hover:text-red-500 transition-colors"
          aria-label="Email"
        >
          <MailIcon class="size-6" />
        </a>
      </div>
    </div>

    <!-- Image / Visual Column -->
    <div
      class="relative flex flex-col justify-center items-center order-1 md:order-2 flex-1 opacity-0 scale-95 animate-in-zoom"
      style="animation-delay: 300ms;"
    >
      <!-- Glow Effect backdrop -->
      <div
        class="absolute w-[300px] h-[300px] md:w-[600px] md:h-[600px] bg-primary-500/20 rounded-full blur-[80px] -z-10"
      >
      </div>

      <!-- Main Image Container -->
      <div class="relative group">
        <div
          class="relative w-64 h-64 sm:w-80 sm:h-80 md:w-[400px] md:h-[400px] rounded-[3rem] rotate-3 overflow-hidden border-[6px] border-white/50 dark:border-white/10 shadow-2xl transition-transform duration-500 hover:rotate-0 hover:scale-[1.02]"
        >
          <Image
            src={profileImg}
            alt="Facundo Rossi"
            class="w-full h-full object-cover"
            loading="eager"
          />
        </div>

        <!-- Floating Badge -->
        <div
          class="absolute -bottom-6 -right-6 md:right-0 bg-white dark:bg-[#18181b] p-4 rounded-2xl shadow-xl border border-zinc-100 dark:border-zinc-800 flex items-center gap-3 animate-float"
        >
          <div class="relative flex h-3 w-3">
            <span
              class="animate-ping absolute inline-flex h-full w-full rounded-full bg-green-500 opacity-75"
            ></span>
            <span class="relative inline-flex rounded-full h-3 w-3 bg-green-500"
            ></span>
          </div>
          <span class="font-medium text-sm text-zinc-900 dark:text-zinc-200"
            >Open to work</span
          >
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  import { animate, stagger, inView } from "motion";

  document.addEventListener("astro:page-load", () => {
    // Animate elements with class .animate-in
    animate(
      ".animate-in",
      { opacity: [0, 1], y: [20, 0] },
      { duration: 0.8, delay: stagger(0.1), easing: [0.22, 0.03, 0.26, 1] },
    );

    // Animate zoom elements
    animate(
      ".animate-in-zoom",
      { opacity: [0, 1], scale: [0.9, 1] },
      { duration: 1, delay: 0.2, easing: [0.22, 0.03, 0.26, 1] },
    );
  });
</script>

<style>
  /* Floating Animation for Badge */
  @keyframes float {
    0%,
    100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-10px);
    }
  }
  .animate-float {
    animation: float 4s ease-in-out infinite;
  }
</style>
