---
import JavaScript from "./icons/JavaScript.astro";
import Python from "./icons/Python.astro";
import HTML from "./icons/HTML.astro";
import CSS from "./icons/CSS.astro";

interface Skill {
  name: string;
  icon?: string;
  component?: any;
  color?: string;
  bg?: string;
}

interface SkillCategory {
  title: string;
  icon: string;
  skills: Skill[];
}

const SKILLS: Record<string, SkillCategory> = {
  LANGUAGES: {
    title: "Programming Languages",
    icon: "code",
    skills: [
      { name: "Java", icon: "java" },
      { name: "JavaScript", icon: "js" },
      { name: "C/C++", icon: "C" },
      { name: "Python", icon: "python" },
      { name: "SQL", icon: "sql" },
    ],
  },
  INFRASTRUCTURE: {
    title: "DevOps & Tools",
    icon: "server",
    skills: [
      { name: "Docker", icon: "docker" },
      { name: "Git", icon: "git" },
      { name: "Linux", icon: "linux" },
      { name: "Bash", icon: "terminal" },
    ],
  },
  WEB: {
    title: "Web Frameworks & Libs",
    icon: "globe",
    skills: [
      { name: "React", icon: "react" },
      { name: "Astro", icon: "astro" },
      { name: "Node.js", icon: "node" },
      { name: "Tailwind", icon: "tailwind" },
    ],
  },
  SOFT: {
    title: "Soft Skills",
    icon: "user",
    skills: [
      { name: "Problem Solving", icon: "puzzle" },
      { name: "Teamwork", icon: "users" },
      { name: "Communication", icon: "chat" },
      { name: "Time Management", icon: "clock" },
      { name: "Adaptability", icon: "adaptive" },
    ],
  },
};
---

<section id="skills" class="w-full">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {Object.values(SKILLS).map((category) => (
            <div class="group p-8 rounded-2xl border border-zinc-800 bg-zinc-900/20 hover:border-zinc-700 transition-all duration-300">
                <div class="flex items-center gap-3 mb-6">
                    <!-- Icon Placeholder -->
                    <div class={`p-2 rounded-lg bg-zinc-800/50 text-white ${category.icon === 'code' ? 'text-blue-400' : category.icon === 'server' ? 'text-purple-400' : category.icon === 'globe' ? 'text-green-400' : 'text-orange-400'}`}>
                         {category.icon === "code" && (
                            <svg xmlns="http://www.w3.org/2000/svg" class="size-6" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M7 8l-4 4l4 4" /><path d="M17 8l4 4l-4 4" /><path d="M14 4l-4 16" /></svg>
                        )}
                         {category.icon === "server" && (
                             <svg xmlns="http://www.w3.org/2000/svg" class="size-6" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M3 4m0 3a3 3 0 0 1 3 -3h12a3 3 0 0 1 3 3v2a3 3 0 0 1 -3 3h-12a3 3 0 0 1 -3 -3z" /><path d="M3 12m0 3a3 3 0 0 1 3 -3h12a3 3 0 0 1 3 3v2a3 3 0 0 1 -3 3h-12a3 3 0 0 1 -3 -3z" /><path d="M7 8l0 .01" /><path d="M7 16l0 .01" /></svg>
                         )}
                         {category.icon === "globe" && (
                             <svg xmlns="http://www.w3.org/2000/svg" class="size-6" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M3 12a9 9 0 1 0 18 0a9 9 0 0 0 -18 0" /><path d="M3.6 9h16.8" /><path d="M3.6 15h16.8" /><path d="M11.5 3a17 17 0 0 0 0 18" /><path d="M12.5 3a17 17 0 0 1 0 18" /></svg>
                         )}
                         {category.icon === "user" && (
                             <svg xmlns="http://www.w3.org/2000/svg" class="size-6" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M8 7a4 4 0 1 0 8 0a4 4 0 0 0 -8 0" /><path d="M6 21v-2a4 4 0 0 1 4 -4h4a4 4 0 0 1 4 4v2" /></svg>
                         )}
                    </div>
                    <h3 class="text-xl font-semibold text-white group-hover:text-zinc-200 transition-colors">
                        {category.title}
                    </h3>
                </div>
                
                <div class="flex flex-wrap gap-3">
                    {category.skills.map((skill) => (
                        <div class="flex items-center gap-2 px-3 py-1.5 rounded-lg bg-zinc-900 border border-zinc-800 text-zinc-400 hover:text-white hover:border-zinc-700 transition-colors cursor-default">
                            {skill.component && <skill.component class="size-4" />}
                            <span class="text-sm font-medium">{skill.name}</span>
                        </div>
                    ))}
                </div>
            </div>
        ))}
    </div>
</section>

