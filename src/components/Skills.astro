---
import JavaScript from "./icons/JavaScript.astro";
import Python from "./icons/Python.astro";
import HTML from "./icons/HTML.astro";
import CSS from "./icons/CSS.astro";

const SKILLS = {
  LANGUAGES: {
    title: "Lenguajes",
    icon: "code",
    skills: [
      { name: "C", icon: "c", color: "text-blue-500", bg: "bg-blue-500/10" },
      {
        name: "Python",
        component: Python,
        color: "text-[#3776AB]",
        bg: "bg-[#3776AB]/10",
      },
      {
        name: "Java",
        icon: "java",
        color: "text-red-500",
        bg: "bg-red-500/10",
      },
      {
        name: "Assembler",
        icon: "asm",
        color: "text-zinc-500",
        bg: "bg-zinc-500/10",
      },
    ],
  },
  INFRASTRUCTURE: {
    title: "Infraestructura y Herramientas",
    icon: "server",
    skills: [
      {
        name: "Linux (Fedora/Nobara)",
        icon: "linux",
        color: "text-yellow-500",
        bg: "bg-yellow-500/10",
      },
      {
        name: "Bash Scripting",
        icon: "terminal",
        color: "text-green-500",
        bg: "bg-green-500/10",
      },
      {
        name: "Git & GitHub",
        icon: "git",
        color: "text-orange-500",
        bg: "bg-orange-500/10",
      },
      {
        name: "Docker",
        icon: "docker",
        color: "text-blue-400",
        bg: "bg-blue-400/10",
      },
    ],
  },
  WEB: {
    title: "Desarrollo Web",
    icon: "globe",
    skills: [
      {
        name: "Astro",
        icon: "astro",
        color: "text-orange-600",
        bg: "bg-orange-600/10",
      },
      {
        name: "HTML5",
        component: HTML,
        color: "text-[#E34F26]",
        bg: "bg-[#E34F26]/10",
      },
      {
        name: "CSS3",
        component: CSS,
        color: "text-[#1572B6]",
        bg: "bg-[#1572B6]/10",
      },
      {
        name: "Tailwind CSS",
        icon: "tailwind",
        color: "text-sky-400",
        bg: "bg-sky-400/10",
      },
    ],
  },
  SOFT: {
    title: "Habilidades Blandas",
    icon: "user",
    skills: [
      { name: "Resolución de Problemas", icon: "puzzle" },
      { name: "Pensamiento Analítico", icon: "brain" },
      { name: "Trabajo en Equipo", icon: "users" },
      { name: "Comunicación Técnica", icon: "chat" },
    ],
  },
};
---

<section id="skills" class="py-24 relative overflow-hidden">
  <!-- Background Elements -->
  <div
    class="absolute top-0 left-0 w-full h-full overflow-hidden pointer-events-none z-0"
  >
    <div
      class="absolute top-20 right-0 w-96 h-96 bg-blue-500/5 rounded-full blur-3xl"
    >
    </div>
    <div
      class="absolute bottom-0 left-0 w-96 h-96 bg-purple-500/5 rounded-full blur-3xl"
    >
    </div>
  </div>

  <div class="relative z-10 container mx-auto px-4">
    <div class="mb-16">
      <h2
        class="text-3xl md:text-4xl font-bold bg-gradient-to-r from-zinc-800 to-zinc-500 dark:from-white dark:to-zinc-400 bg-clip-text text-transparent inline-block"
      >
        Arsenal Tecnológico
      </h2>
      <div
        class="h-1 w-20 bg-gradient-to-r from-blue-600 to-purple-600 mt-2 rounded-full"
      >
      </div>
      <p class="mt-4 text-zinc-600 dark:text-zinc-400 max-w-2xl text-lg">
        Conjunto de herramientas y lenguajes optimizados para desarrollo
        backend, infraestructura y automatización.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      {
        Object.values(SKILLS).map((category) => (
          <div class="p-6 rounded-2xl border border-zinc-200 dark:border-zinc-800 bg-white/50 dark:bg-zinc-900/50 backdrop-blur-xl hover:border-blue-500/30 dark:hover:border-blue-500/30 transition-all duration-500 group shadow-lg hover:shadow-xl hover:shadow-blue-500/5 hover:-translate-y-1">
            <div class="flex items-center gap-4 mb-8">
              <div class="p-3 rounded-xl bg-gradient-to-br from-blue-500/10 to-purple-500/10 dark:from-blue-500/20 dark:to-purple-500/20 text-blue-600 dark:text-blue-400 group-hover:scale-110 transition-transform duration-500">
                {category.icon === "code" && (
                  <svg
                    class="w-6 h-6"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"
                    />
                  </svg>
                )}
                {category.icon === "server" && (
                  <svg
                    class="w-6 h-6"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01"
                    />
                  </svg>
                )}
                {category.icon === "globe" && (
                  <svg
                    class="w-6 h-6"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"
                    />
                  </svg>
                )}
                {category.icon === "user" && (
                  <svg
                    class="w-6 h-6"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M14.828 14.828a4 4 0 01-5.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                    />
                  </svg>
                )}
              </div>
              <h3 class="text-xl font-bold text-zinc-800 dark:text-zinc-100">
                {category.title}
              </h3>
            </div>

            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
              {category.skills.map((skill) => (
                <div class="flex items-center gap-3 p-3 rounded-lg bg-zinc-50 dark:bg-zinc-800/50 border border-zinc-100 dark:border-zinc-700/50 hover:bg-white dark:hover:bg-zinc-800 hover:border-zinc-200 dark:hover:border-zinc-600 hover:shadow-md transition-all duration-300">
                  <div
                    class={`w-10 h-10 rounded-lg flex items-center justify-center shrink-0 ${skill.bg || "bg-zinc-200 dark:bg-zinc-700"} ${skill.color || "text-zinc-700 dark:text-zinc-300"}`}
                  >
                    {skill.component ? (
                      <skill.component class="w-6 h-6" />
                    ) : (
                      <>
                        {skill.icon === "c" && (
                          <span class="font-bold text-lg">C</span>
                        )}
                        {skill.icon === "java" && (
                          <span class="font-bold text-lg">J</span>
                        )}
                        {skill.icon === "asm" && (
                          <span class="font-mono font-bold text-xs">ASM</span>
                        )}
                        {skill.icon === "linux" && (
                          <svg
                            class="w-6 h-6"
                            viewBox="0 0 24 24"
                            fill="currentColor"
                          >
                            <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8z" />
                            <path d="M12 6c-1.1 0-2 .9-2 2s.9 2 2 2 2-.9 2-2-.9-2-2-2zm0 8c-2.21 0-4 1.79-4 4h8c0-2.21-1.79-4-4-4z" />
                          </svg>
                        )}
                        {skill.icon === "terminal" && (
                          <svg
                            class="w-6 h-6"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                          >
                            <path
                              stroke-linecap="round"
                              stroke-linejoin="round"
                              stroke-width="2"
                              d="M4 17v2a2 2 0 002 2h12a2 2 0 002-2v-2M4 9V5a2 2 0 012-2h12a2 2 0 012 2v4M4 12V9m16 3v-2.5M7 13l2-2 2 2M12 11l4 4"
                            />
                          </svg>
                        )}
                        {skill.icon === "git" && (
                          <svg
                            class="w-6 h-6"
                            fill="currentColor"
                            viewBox="0 0 24 24"
                          >
                            <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 14h-2v-2h2v2zm0-4h-2V7h2v5z" />
                          </svg>
                        )}
                        {skill.icon === "docker" && (
                          <svg
                            class="w-6 h-6"
                            fill="currentColor"
                            viewBox="0 0 24 24"
                          >
                            <path d="M19 13H5v-2h14v2z" />
                          </svg>
                        )}
                        {skill.icon === "astro" && (
                          <svg
                            class="w-6 h-6"
                            fill="currentColor"
                            viewBox="0 0 24 24"
                          >
                            <path d="M12 2l2.5 7h-5L12 2zm0 20c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8z" />
                          </svg>
                        )}
                        {skill.icon === "tailwind" && (
                          <svg
                            class="w-6 h-6"
                            fill="currentColor"
                            viewBox="0 0 24 24"
                          >
                            <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-1 14H9v-2h2v2zm3-4h-2V7h2v5z" />
                          </svg>
                        )}

                        {skill.icon === "puzzle" && (
                          <svg
                            class="w-5 h-5"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                          >
                            <path
                              stroke-linecap="round"
                              stroke-linejoin="round"
                              stroke-width="2"
                              d="M11 4a2 2 0 114 0v1a1 1 0 001 1h3a1 1 0 011 1v3a1 1 0 01-1 1h-1a2 2 0 100 4h1a1 1 0 011 1v3a1 1 0 01-1 1h-3a1 1 0 01-1-1v-1a2 2 0 10-4 0v1a1 1 0 01-1 1H7a1 1 0 01-1-1v-3a1 1 0 00-1-1H4a2 2 0 110-4h1a1 1 0 001-1V7a1 1 0 011-1h3a1 1 0 001-1V4z"
                            />
                          </svg>
                        )}
                        {skill.icon === "brain" && (
                          <svg
                            class="w-5 h-5"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                          >
                            <path
                              stroke-linecap="round"
                              stroke-linejoin="round"
                              stroke-width="2"
                              d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"
                            />
                          </svg>
                        )}
                        {skill.icon === "users" && (
                          <svg
                            class="w-5 h-5"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                          >
                            <path
                              stroke-linecap="round"
                              stroke-linejoin="round"
                              stroke-width="2"
                              d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"
                            />
                          </svg>
                        )}
                        {skill.icon === "chat" && (
                          <svg
                            class="w-5 h-5"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                          >
                            <path
                              stroke-linecap="round"
                              stroke-linejoin="round"
                              stroke-width="2"
                              d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"
                            />
                          </svg>
                        )}
                      </>
                    )}
                  </div>
                  <span class="font-medium text-sm text-zinc-700 dark:text-zinc-200">
                    {skill.name}
                  </span>
                </div>
              ))}
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
