--- 
import ThemeToggle from './ThemeToggle.astro';
---

<header id="header" class="fixed top-0 z-50 w-full bg-white/80 dark:bg-zinc-900/80 backdrop-blur-md border-b border-zinc-200 dark:border-zinc-800 transition-all duration-300">
  <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <div class="flex items-center">
        <a href="/" class="text-2xl font-bold text-primary dark:text-primary-light">FR</a>
      </div>
      <nav class="hidden md:flex md:items-center md:space-x-8">
        <a href="#experience" class="text-zinc-600 dark:text-zinc-300 hover:text-primary dark:hover:text-primary-light transition-colors duration-300">Experience</a>
        <a href="#projects" class="text-zinc-600 dark:text-zinc-300 hover:text-primary dark:hover:text-primary-light transition-colors duration-300">Projects</a>
        <a href="#about-me" class="text-zinc-600 dark:text-zinc-300 hover:text-primary dark:hover:text-primary-light transition-colors duration-300">About</a>
        <a href="#contact" class="text-zinc-600 dark:text-zinc-300 hover:text-primary dark:hover:text-primary-light transition-colors duration-300">Contact</a>
      </nav>
      <div class="flex items-center">
        <ThemeToggle />
      </div>
    </div>
  </div>
</header>

<script>
  let lastScrollTop = 0;
  const header = document.getElementById('header');

  if (header) {
    window.addEventListener('scroll', () => {
      const scrollTop = window.pageYOffset || document.documentElement.scrollTop;
      if (scrollTop > lastScrollTop) {
        // Downscroll
        header.style.transform = 'translateY(-100%)';
      } else {
        // Upscroll
        header.style.transform = 'translateY(0)';
      }
      lastScrollTop = scrollTop <= 0 ? 0 : scrollTop; // For Mobile or negative scrolling
    });
  }
</script>